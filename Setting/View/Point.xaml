<UserControl x:Class="Setting.View.Point"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Setting.View"
             mc:Ignorable="d" 
             Height="150" Width="150"
             DataContext="{Binding Source={StaticResource Locator},Path=point}"
             >

    <Button Command="{Binding OrderCommand}" Height="150" Width="150" >
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Rectangle Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{Binding Fill}" Stroke="#FF2F4AA6" StrokeThickness="10"/>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
