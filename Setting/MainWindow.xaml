<Window x:Class="Setting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Setting"
        xmlns:myview="clr-namespace:Setting.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="112*"/>
            <RowDefinition Height="211*"/>
        </Grid.RowDefinitions>

        <myview:PointList ></myview:PointList>

        <StackPanel Grid.Row="1" DataContext="{Binding Path=PointList,Source={StaticResource Locator}}">
            <Button Width="100" Height="30"   Command="{Binding OpenFileCommand}">导入</Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentFrame}"></TextBlock>
                <TextBlock >/</TextBlock>
                <TextBlock Text="{Binding FramesCount}"></TextBlock>
                <Button Width="100" Height="30"   Command="{Binding LeftFrameCommand}">上一帧
                </Button>
                <Button Width="100" Height="30"   Command="{Binding RightframeCommand}">下一帧
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button Width="100" Height="30"   Command="{Binding LeftCommand}">左 </Button>
                <Button Width="100" Height="30"   Command="{Binding RightCommand}">右</Button>
                <Button Width="100" Height="30"   Command="{Binding TopCommand}">上</Button>
                <Button Width="100" Height="30"   Command="{Binding BottomCommand}">下</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding changeColor}"></TextBlock>
                <Button Width="100" Height="30"   Command="{Binding OpenFileCommand}">下</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
